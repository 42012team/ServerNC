<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="classes.model.Service" table="service" lazy="false">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="java.lang.Integer" column="service_id"/>
        <property name="name" column="service_name" type="java.lang.String"/>
        <property name="description" column="description" type="java.lang.String"/>
        <property name="type" column="service_type" type="java.lang.String"/>
       <property name="status" column="service_status" >
        <type name="org.hibernate.type.EnumType">
            <param name="enumClass">classes.model.ServiceStatus</param>
            <param name="type">12</param>
                </type>
        </property>
<!--type="classes.model.ServiceStatus-->
    </class>
</hibernate-mapping>